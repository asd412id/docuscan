# Application
APP_NAME=DocuScan
APP_VERSION=1.0.0
DEBUG=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Security
SECRET_KEY=dev-secret-key-not-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (local PostgreSQL)
DATABASE_URL=postgresql+asyncpg://docuscan:docuscan@localhost:5432/docuscan

# Redis (local)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# Celery (for background processing)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_ENABLED=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_UPLOAD=20/minute
RATE_LIMIT_PROCESS=30/minute

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=20
FILE_RETENTION_MINUTES=60

# Tesseract OCR (Windows: update path sesuai instalasi)
# Windows: C:/Program Files/Tesseract-OCR/tesseract.exe
# Linux/Mac: /usr/bin/tesseract
TESSERACT_CMD=/usr/bin/tesseract
